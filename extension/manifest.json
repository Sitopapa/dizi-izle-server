{
    "manifest_version": 3,
    "name": "Birlikte İzle",
    "version": "1.0",
    "description": "Arkadaşınla senkronize dizi izle.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "ws://localhost:3000/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "socket.io.min.js",
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "socket.io.min.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}